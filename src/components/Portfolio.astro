---
import "../styles/card.sass";
import "../styles/grid.sass";
---

<section>
    <h2 id="portfolio">Portfolio</h2>

    <ul class="grid card-wrapper">
        <li class="card-wrapper__card">
            <a
                class="grid__item card-wrapper__card__content"
                href="https://github.com/Frank-Mayer/stream"
                rel="noopener noreferrer"
                target="_blank"
            >
                <h3>Frank-Mayer/stream</h3>
                <p>
                    <img
                        style="height: 1em; display: inline;"
                        src="/lang/ts.svg"
                        alt=""
                    /> TypeScript
                </p>
                <p>A typescript library for working with streams of data.</p>
            </a>
        </li>
        <li class="card-wrapper__card">
            <a
                class="grid__item card-wrapper__card__content"
                href="https://github.com/HHN-SEB-2022-23/allybi"
                rel="noopener noreferrer"
                target="_blank"
            >
                <h3>HHN-SEB-2022-23/allybi</h3>
                <p>
                    <img
                        style="height: 1em; display: inline;"
                        src="/lang/ts.svg"
                        alt=""
                    /> React
                </p>
                <p>
                    Educational game for the anti discrimination organization in
                    Heilbronn
                </p>
            </a>
        </li>
        <li class="card-wrapper__card">
            <a
                class="grid__item card-wrapper__card__content"
                href="https://github.com/yams-team"
                rel="noopener noreferrer"
                target="_blank"
            >
                <h3>yams</h3>
                <p>
                    <img
                        style="height: 1em; display: inline;"
                        src="/lang/rs.webp"
                        alt=""
                    /> Rust
                </p>
                <p>
                    Minecraft multiplayer server reimplementation as
                    microservices
                </p>
            </a>
        </li>
    </ul>
</section>

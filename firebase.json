{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=172800,s-maxage=172800,stale-while-revalidate=86400,immutable"
          }
        ]
      },
      {
        "source": "img/fav.webp",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=172800,s-maxage=172800,stale-while-revalidate=86400,immutable"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|otf|ttf|woff2|woff|jpg|jpeg|png|webp|xml|txt)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,s-maxage=31536000,stale-while-revalidate=172800,immutable"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
